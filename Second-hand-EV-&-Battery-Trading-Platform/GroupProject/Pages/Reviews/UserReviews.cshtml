@page "{userId:int}"
@model GroupProject.Pages.Reviews.UserReviewsModel
@{
    ViewData["Title"] = "Đánh giá người bán";
}

<div class="page-header">
    <h1>Đánh giá người bán</h1>
</div>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

@if (Model.Summary != null)
{
    <div class="card-modern mb-4">
        <div class="row align-items-center">
            <div class="col-md-4 text-center">
                <div class="mb-3">
                    <div class="display-4 fw-bold text-primary">@Model.Summary.AverageRating.ToString("F1")</div>
                    <div class="text-muted">Đánh giá trung bình</div>
                    <div class="mt-2">
                        @{
                            var roundedRating = (int)Math.Round(Model.Summary.AverageRating);
                        }
                        @for (int i = 1; i <= 5; i++)
                        {
                            <span class="fs-4 @(i <= roundedRating ? "text-warning" : "text-muted")">★</span>
                        }
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <h5 class="mb-3">@Model.Summary.UserName</h5>
                <div class="mb-2">
                    <strong>Tổng số đánh giá:</strong> @Model.Summary.TotalReviews
                </div>
                <div class="rating-breakdown">
                    @for (int i = 5; i >= 1; i--)
                    {
                        var count = i switch
                        {
                            5 => Model.Summary.Rating5Count,
                            4 => Model.Summary.Rating4Count,
                            3 => Model.Summary.Rating3Count,
                            2 => Model.Summary.Rating2Count,
                            1 => Model.Summary.Rating1Count,
                            _ => 0
                        };
                        <div class="d-flex align-items-center mb-2">
                            <span class="me-2">@i sao:</span>
                            <a asp-page="UserReviews" asp-route-userId="@Model.Summary.UserId" asp-route-rating="@i" 
                               class="text-decoration-none @(Model.RatingFilter == i ? "fw-bold text-primary" : "")">
                                @count đánh giá
                            </a>
                        </div>
                    }
                    @if (Model.RatingFilter.HasValue)
                    {
                        <a asp-page="UserReviews" asp-route-userId="@Model.Summary.UserId" class="btn btn-sm btn-outline-secondary mt-2">
                            Xem tất cả
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
}

@if (Model.Reviews.Any())
{
    <div class="row g-4">
        @foreach (var review in Model.Reviews)
        {
            <div class="col-12">
                <div class="card-modern">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <h6 class="mb-1">@review.ReviewerName</h6>
                            <div class="rating-stars mb-2">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <span class="fs-5 @(i <= review.Rating ? "text-warning" : "text-muted")">★</span>
                                }
                                <span class="ms-2 text-muted">(@review.Rating sao)</span>
                            </div>
                        </div>
                        <small class="text-muted">@review.CreatedDate?.ToString("dd/MM/yyyy HH:mm")</small>
                    </div>

                    @if (!string.IsNullOrWhiteSpace(review.Comment))
                    {
                        <p class="mb-2">@review.Comment</p>
                    }

                    @if (!string.IsNullOrWhiteSpace(review.ProductName))
                    {
                        <div class="mt-2">
                            <small class="text-muted">
                                Sản phẩm: <span class="badge bg-info">@review.ProductType</span> @review.ProductName
                            </small>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info">
        <p class="mb-0">
            @if (Model.RatingFilter.HasValue)
            {
                <text>Không có đánh giá @Model.RatingFilter sao nào.</text>
            }
            else
            {
                <text>Chưa có đánh giá nào.</text>
            }
        </p>
    </div>
}

