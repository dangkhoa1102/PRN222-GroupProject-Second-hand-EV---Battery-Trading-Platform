@page
@model GroupProject.Pages.Buyer.Orders.CreateModel
@{
    ViewData["Title"] = "Tạo đơn hàng";
}

<div class="page-header">
    <h1>Tạo đơn hàng</h1>
    <a class="btn btn-link" asp-page="/Index">Quay lại</a>
</div>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

@if (!string.IsNullOrEmpty(Model.ItemName))
{
    <div class="row">
        <div class="col-lg-8">
            <div class="card-modern mb-4">
                <h3 class="h5 mb-3">Thông tin sản phẩm</h3>
                <dl class="row">
                    <dt class="col-sm-4">Loại sản phẩm</dt>
                    <dd class="col-sm-8">@(Model.ItemType == "Vehicle" ? "Xe điện" : "Pin điện")</dd>

                    <dt class="col-sm-4">Tên sản phẩm</dt>
                    <dd class="col-sm-8">@Model.ItemName</dd>

                    <dt class="col-sm-4">Giá</dt>
                    <dd class="col-sm-8"><strong class="text-success">@Model.ItemPrice.ToString("N0") đ</strong></dd>

                    <dt class="col-sm-4">Người bán</dt>
                    <dd class="col-sm-8">@Model.SellerName</dd>
                </dl>
            </div>

            <form method="post" class="card-modern">
                <h3 class="h5 mb-3">Thông tin đơn hàng</h3>

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input type="hidden" asp-for="OrderDto.BuyerId" />
                <input type="hidden" asp-for="OrderDto.SellerId" />
                <input type="hidden" asp-for="OrderDto.TotalAmount" />
                <input type="hidden" asp-for="OrderDto.ItemType" />
                <input type="hidden" asp-for="OrderDto.ItemId" />

                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> Sau khi người bán xác nhận đơn hàng, bạn sẽ chọn phương thức thanh toán và chuyển tiền.
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle"></i> Xác nhận đặt hàng
                    </button>
                    <a asp-page="/Index" class="btn btn-secondary">Hủy</a>
                </div>
            </form>
        </div>

        <div class="col-lg-4">
            <div class="card-modern">
                <h3 class="h5 mb-3">Tóm tắt đơn hàng</h3>
                <dl class="row mb-0">
                    <dt class="col-6">Sản phẩm</dt>
                    <dd class="col-6 text-end">@Model.ItemName</dd>

                    <dt class="col-6">Giá</dt>
                    <dd class="col-6 text-end">@Model.ItemPrice.ToString("N0") đ</dd>

                    <hr class="my-2" />

                    <dt class="col-6"><strong>Tổng cộng</strong></dt>
                    <dd class="col-6 text-end"><strong class="text-success">@Model.ItemPrice.ToString("N0") đ</strong></dd>
                </dl>
            </div>
        </div>
    </div>
}
else if (string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-info">
        <p>Đang tải thông tin sản phẩm...</p>
        <p class="mb-0"><a asp-page="/Index" class="btn btn-link">Quay lại trang chủ</a></p>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

