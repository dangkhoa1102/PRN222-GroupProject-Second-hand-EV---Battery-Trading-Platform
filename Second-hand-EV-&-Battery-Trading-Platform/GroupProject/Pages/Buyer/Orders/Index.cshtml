@page
@model GroupProject.Pages.Buyer.Orders.IndexModel
@{
    ViewData["Title"] = "Đơn hàng của tôi";
}

<div class="page-header">
    <h1>Đơn hàng của tôi</h1>
    <a class="btn btn-link" asp-page="/Index">Quay lại trang chủ</a>
</div>

@if (!string.IsNullOrEmpty(Model.StatusMessage))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @Model.StatusMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

@if (Model.Orders.Any())
{
    <div class="card-modern">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Mã đơn</th>
                        <th>Sản phẩm</th>
                        <th>Người bán</th>
                        <th>Số tiền</th>
                        <th>Thanh toán</th>
                        <th>Ngày đặt</th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model.Orders)
                    {
                        <tr>
                            <td>#@order.OrderId</td>
                            <td>
                                <div>
                                    <strong>@order.ItemName</strong>
                                    <br />
                                    <small class="text-muted">@(order.OrderType == "Vehicle" ? "Xe điện" : "Pin điện")</small>
                                </div>
                            </td>
                            <td>@order.SellerName</td>
                            <td>@order.TotalAmount.ToString("N0") đ</td>
                            <td>@order.PaymentMethod</td>
                            <td>@(order.CreatedDate?.ToString("dd/MM/yyyy HH:mm") ?? "—")</td>
                            <td>
                                <span class="badge bg-@(order.OrderStatus switch
                                {
                                    "Pending" => "warning",
                                    "Confirmed" => "info",
                                    "Delivered" => "primary",
                                    "Completed" => "success",
                                    "Cancelled" => "danger",
                                    _ => "secondary"
                                })">
                                    @order.Status
                                </span>
                            </td>
                            <td>
                                <a asp-page="Detail" asp-route-id="@order.OrderId" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-eye"></i> Xem
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="card-modern text-center py-5">
        <div class="text-muted">
            <i class="bi bi-inbox" style="font-size: 3rem;"></i>
            <p class="mt-3">Bạn chưa có đơn hàng nào.</p>
            <a asp-page="/Index" class="btn btn-primary">Xem sản phẩm</a>
        </div>
    </div>
}

