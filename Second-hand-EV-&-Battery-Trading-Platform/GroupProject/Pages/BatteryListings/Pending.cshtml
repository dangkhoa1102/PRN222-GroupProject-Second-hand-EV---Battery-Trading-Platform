@page
@model GroupProject.Pages.BatteryListings.PendingModel
@{
    ViewData["Title"] = "Tin pin chờ duyệt";
    ViewData["FullWidth"] = true;
}

<div class="page-header">
    <h1>Tin pin chờ duyệt</h1>
</div>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

@if (!string.IsNullOrEmpty(Model.FlashMessage))
{
    <div class="alert alert-success">@Model.FlashMessage</div>
}

<div class="listing-table-card">
    <div class="table-responsive">
        <table class="table align-middle">
            <thead>
                <tr>
                    <th>Loại pin</th>
                    <th>Thương hiệu</th>
                    <th>Dung lượng</th>
                    <th>Người đăng</th>
                    <th>Email</th>
                    <th>Số điện thoại</th>
                    <th>Giá</th>
                    <th>Ngày gửi</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Listings?.Any() == true)
                {
                    foreach (var listing in Model.Listings)
                    {
                        <tr>
                            <td>@listing.BatteryType</td>
                            <td>@listing.Brand</td>
                            <td>@listing.Capacity</td>
                            <td>@listing.SellerName</td>
                            <td>@(string.IsNullOrWhiteSpace(listing.SellerEmail) ? "-" : listing.SellerEmail)</td>
                            <td>@(string.IsNullOrWhiteSpace(listing.SellerPhoneNumber) ? "-" : listing.SellerPhoneNumber)</td>
                            <td>@listing.Price.ToString("N0") đ</td>
                            <td>@(listing.SubmittedDate?.ToString("dd/MM/yyyy HH:mm") ?? "-")</td>
                            <td class="text-end">
                                <div class="table-actions justify-content-end">
                                    <a class="btn btn-chip btn-chip-neutral" asp-page="Review" asp-route-id="@listing.BatteryId">Xem chi tiết</a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="9" class="text-center text-muted py-4">Không có tin pin nào đang chờ duyệt.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

