@using Microsoft.AspNetCore.Http
@using BLL.Constants
@{
    var userId = Context.Session.GetInt32("UserId");
    var fullName = Context.Session.GetString("FullName");
    var isLoggedIn = userId.HasValue;
    var isFullWidth = (ViewData["FullWidth"] as bool?) ?? false;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GroupProject</title>
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
          crossorigin="anonymous" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GroupProject.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="shadow-sm">
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-area="" asp-page="/Index">
                    <span class="me-2">⚡</span>EV Trading
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNavbar">
                    @if (isLoggedIn)
                    {
                        <div class="navbar-nav mx-auto d-flex align-items-center justify-content-center nav-actions">
                            @if (string.Equals(Context.Session.GetString("Role"), RoleConstants.Customer, StringComparison.OrdinalIgnoreCase))
                            {
                                <div class="dropdown nav-dropdown">
                                    <button class="btn btn-outline-light dropdown-toggle" type="button" id="customerNavDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                        Tin của tôi
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-center" aria-labelledby="customerNavDropdown">
                                        <li><a class="dropdown-item" asp-page="/VehicleListings/Index">Tin xe của tôi</a></li>
                                        <li><a class="dropdown-item" asp-page="/BatteryListings/Index">Tin pin của tôi</a></li>
                                    </ul>
                                </div>
                                <div class="dropdown nav-dropdown">
                                    <button class="btn btn-primary dropdown-toggle" type="button" id="customerCreateDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                        Đăng tin mới
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-center" aria-labelledby="customerCreateDropdown">
                                        <li><a class="dropdown-item" asp-page="/VehicleListings/Upsert">Đăng xe mới</a></li>
                                        <li><a class="dropdown-item" asp-page="/BatteryListings/Upsert">Đăng pin mới</a></li>
                                    </ul>
                                </div>
                            }
                            @if (string.Equals(Context.Session.GetString("Role"), RoleConstants.Admin, StringComparison.OrdinalIgnoreCase))
                            {
                                <div class="dropdown nav-dropdown">
                                    <button class="btn btn-outline-light dropdown-toggle" type="button" id="staffNavDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                        Tin chờ duyệt
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-center" aria-labelledby="staffNavDropdown">
                                        <li><a class="dropdown-item" asp-page="/VehicleListings/Pending">Xe chờ duyệt</a></li>
                                        <li><a class="dropdown-item" asp-page="/BatteryListings/Pending">Pin chờ duyệt</a></li>
                                    </ul>
                                </div>
                                <div class="dropdown nav-dropdown">
                                    <button class="btn btn-outline-light dropdown-toggle" type="button" id="staffManageDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                        Quản lý tin
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-center" aria-labelledby="staffManageDropdown">
                                        <li><a class="dropdown-item" asp-page="/VehicleListings/Manage">Tất cả tin xe</a></li>
                                        <li><a class="dropdown-item" asp-page="/BatteryListings/Manage">Tất cả tin pin</a></li>
                                    </ul>
                                </div>
                                <div class="dropdown nav-dropdown">
                                    <button class="btn btn-outline-light dropdown-toggle" type="button" id="adminTransactionsDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                        Quản lý giao dịch
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-center" aria-labelledby="adminTransactionsDropdown">
                                        <li><a class="dropdown-item" asp-page="/Admin/OrderTransactionsAdmin">Tất cả</a></li>
                                        <li><a class="dropdown-item" asp-page="/Admin/VehicleTransactionsAdmin">Xe</a></li>
                                        <li><a class="dropdown-item" asp-page="/Admin/BatteryTransactionsAdmin">Pin</a></li>
                                    </ul>
                                </div>
                            }
                        </div>
                    }
                    <div class="d-flex align-items-center gap-3 ms-lg-3">
                        @if (isLoggedIn)
                        {
                            <div class="dropdown user-menu">
                                <button class="btn btn-outline-light dropdown-toggle d-flex align-items-center gap-2"
                                        type="button" id="userMenuDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                    <span class="user-avatar">@(!string.IsNullOrWhiteSpace(fullName) ? fullName![0].ToString().ToUpperInvariant() : "U")</span>
                                    <span>@(!string.IsNullOrWhiteSpace(fullName) ? fullName : "Khách")</span>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end shadow user-menu-dropdown" aria-labelledby="userMenuDropdown">
                                    <li class="dropdown-header">
                                        <div class="fw-semibold">@(!string.IsNullOrWhiteSpace(fullName) ? fullName : "Khách")</div>
                                        <div class="small text-muted">@Context.Session.GetString("Email")</div>
                                    </li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li>
                                        <form asp-page="/Account/Logout" method="post" class="d-inline">
                                            <button type="submit" class="dropdown-item text-danger fw-semibold">
                                                Đăng xuất
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <a class="btn btn-outline-light" asp-page="/Account/Login">Đăng nhập</a>
                            <a class="btn btn-primary" asp-page="/Account/Register">Đăng ký</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="@(isFullWidth ? "container-fluid px-4 px-lg-5 py-4" : "container py-4")">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-auto text-muted">
        <div class="container d-flex flex-column flex-md-row justify-content-between align-items-center gap-2">
            <span>&copy; @DateTime.Now.Year - EV Trading Platform</span>
            <span class="small">Kết nối người mua &amp; bán pin, xe điện đã qua sử dụng</span>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"
            integrity="sha384-3gJwYp8p+OAqvkpzxxEeHEdBDEuDfSU/EYEYVplpXCMVbJAnYXhYzu+AO6B+36hF"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>