@page "{id:int}"
@model GroupProject.Pages.Seller.Orders.DetailModel
@{
    ViewData["Title"] = $"Chi tiết đơn hàng #{Model.OrderDetail.OrderId}";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Chi tiết đơn hàng #@Model.OrderDetail.OrderId</h2>
        <a asp-page="/Seller/Orders/Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Quay lại
        </a>
    </div>

    @if (!string.IsNullOrEmpty(Model.StatusMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @Model.StatusMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- Thông tin sản phẩm -->
        <div class="col-lg-8">
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-box-seam"></i> Thông tin sản phẩm</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        @if (!string.IsNullOrWhiteSpace(Model.OrderDetail.ItemImageUrl))
                        {
                            <div class="col-md-4">
                                <img src="@Model.OrderDetail.ItemImageUrl" alt="@Model.OrderDetail.ItemName" class="img-fluid rounded" />
                            </div>
                            <div class="col-md-8">
                                <h4>@Model.OrderDetail.ItemName</h4>
                                <p class="text-muted">@Model.OrderDetail.ItemDescription</p>
                                <hr />
                                <dl class="row">
                                    <dt class="col-sm-4">Loại đơn hàng:</dt>
                                    <dd class="col-sm-8">
                                        @if (Model.OrderDetail.OrderType == "Vehicle")
                                        {
                                            <span class="badge bg-primary text-white">Xe điện</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-info text-white">Pin</span>
                                        }
                                    </dd>

                                    <dt class="col-sm-4">Tổng tiền:</dt>
                                    <dd class="col-sm-8"><strong class="text-success fs-5">@Model.OrderDetail.TotalAmount.ToString("N0") đ</strong></dd>

                                    <dt class="col-sm-4">Phương thức thanh toán:</dt>
                                    <dd class="col-sm-8">@Model.OrderDetail.PaymentMethod</dd>

                                    <dt class="col-sm-4">Ngày đặt hàng:</dt>
                                    <dd class="col-sm-8">@Model.OrderDetail.CreatedDate?.ToString("dd/MM/yyyy HH:mm")</dd>

                                    @if (Model.OrderDetail.CompletedDate.HasValue)
                                    {
                                        <dt class="col-sm-4">Ngày xác nhận:</dt>
                                        <dd class="col-sm-8">@Model.OrderDetail.CompletedDate.Value.ToString("dd/MM/yyyy HH:mm")</dd>
                                    }

                                    @if (Model.OrderDetail.DeliveryDate.HasValue)
                                    {
                                        <dt class="col-sm-4">Ngày nhận hàng:</dt>
                                        <dd class="col-sm-8">@Model.OrderDetail.DeliveryDate.Value.ToString("dd/MM/yyyy HH:mm")</dd>
                                    }

                                    @if (!string.IsNullOrEmpty(Model.OrderDetail.CancellationReason))
                                    {
                                        <dt class="col-sm-4">Lý do hủy:</dt>
                                        <dd class="col-sm-8"><span class="text-danger">@Model.OrderDetail.CancellationReason</span></dd>
                                    }
                                </dl>
                            </div>
                        }
                        else
                        {
                            <div class="col-12">
                                <h4>@Model.OrderDetail.ItemName</h4>
                                <p class="text-muted">@Model.OrderDetail.ItemDescription</p>
                                <hr />
                                <dl class="row">
                                    <dt class="col-sm-3">Loại đơn hàng:</dt>
                                    <dd class="col-sm-9">
                                        @if (Model.OrderDetail.OrderType == "Vehicle")
                                        {
                                            <span class="badge bg-primary text-white">Xe điện</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-info text-white">Pin</span>
                                        }
                                    </dd>

                                    <dt class="col-sm-3">Tổng tiền:</dt>
                                    <dd class="col-sm-9"><strong class="text-success fs-5">@Model.OrderDetail.TotalAmount.ToString("N0") đ</strong></dd>

                                    <dt class="col-sm-3">Phương thức thanh toán:</dt>
                                    <dd class="col-sm-9">@Model.OrderDetail.PaymentMethod</dd>

                                    <dt class="col-sm-3">Ngày đặt hàng:</dt>
                                    <dd class="col-sm-9">@Model.OrderDetail.CreatedDate?.ToString("dd/MM/yyyy HH:mm")</dd>

                                    @if (Model.OrderDetail.CompletedDate.HasValue)
                                    {
                                        <dt class="col-sm-3">Ngày xác nhận:</dt>
                                        <dd class="col-sm-9">@Model.OrderDetail.CompletedDate.Value.ToString("dd/MM/yyyy HH:mm")</dd>
                                    }

                                    @if (Model.OrderDetail.DeliveryDate.HasValue)
                                    {
                                        <dt class="col-sm-3">Ngày nhận hàng:</dt>
                                        <dd class="col-sm-9">@Model.OrderDetail.DeliveryDate.Value.ToString("dd/MM/yyyy HH:mm")</dd>
                                    }

                                    @if (!string.IsNullOrEmpty(Model.OrderDetail.CancellationReason))
                                    {
                                        <dt class="col-sm-3">Lý do hủy:</dt>
                                        <dd class="col-sm-9"><span class="text-danger">@Model.OrderDetail.CancellationReason</span></dd>
                                    }
                                </dl>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Thông tin người mua -->
        <div class="col-lg-4">
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-person-circle"></i> Thông tin người mua</h5>
                </div>
                <div class="card-body">
                    <dl>
                        <dt>Họ tên:</dt>
                        <dd><strong>@Model.OrderDetail.BuyerName</strong></dd>

                        <dt>Email:</dt>
                        <dd>
                            <a href="mailto:@Model.OrderDetail.BuyerEmail">@Model.OrderDetail.BuyerEmail</a>
                        </dd>

                        <dt>Số điện thoại:</dt>
                        <dd>
                            <a href="tel:@Model.OrderDetail.BuyerPhone" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-telephone"></i> @Model.OrderDetail.BuyerPhone
                            </a>
                        </dd>
                    </dl>
                </div>
            </div>

            <!-- Trạng thái đơn hàng -->
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> Trạng thái</h5>
                </div>
                <div class="card-body text-center">
                    <span class="badge bg-@(Model.OrderDetail.OrderStatus switch
                    {
                        "Pending" => "warning text-dark",
                        "Confirmed" => "info",
                        "Delivered" => "primary",
                        "Completed" => "success",
                        "Cancelled" => "danger",
                        _ => "secondary"
                    }) fs-6 p-3">
                        <i class="bi bi-@(Model.OrderDetail.OrderStatus switch
                        {
                            "Pending" => "clock",
                            "Confirmed" => "check-circle",
                            "Delivered" => "truck",
                            "Completed" => "check-circle-fill",
                            "Cancelled" => "x-circle",
                            _ => "info-circle"
                        })"></i> @Model.OrderDetail.Status
                    </span>
                    @if (!string.IsNullOrEmpty(Model.OrderDetail.CancellationReason))
                    {
                        <div class="mt-3">
                            <small class="text-muted"><strong>Lý do hủy:</strong></small>
                            <p class="text-danger small mb-0">@Model.OrderDetail.CancellationReason</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Thao tác -->
            @if (Model.OrderDetail.CanConfirmOrReject)
            {
                <div class="card mb-3">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-gear"></i> Thao tác</h5>
                    </div>
                    <div class="card-body">
                        <form method="post" asp-page-handler="Confirm" asp-route-id="@Model.OrderDetail.OrderId" class="mb-2">
                            <button type="submit" class="btn btn-success w-100" onclick="return confirm('Xác nhận đơn hàng #@Model.OrderDetail.OrderId?')">
                                <i class="bi bi-check-circle"></i> Xác nhận đơn hàng
                            </button>
                        </form>
                        <button type="button" class="btn btn-danger w-100" data-bs-toggle="modal" data-bs-target="#rejectModal">
                            <i class="bi bi-x-circle"></i> Từ chối đơn hàng
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Modal Reject -->
    @if (Model.OrderDetail.CanConfirmOrReject)
    {
        <div class="modal fade" id="rejectModal" tabindex="-1" aria-labelledby="rejectModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <form method="post" asp-page-handler="Reject" asp-route-id="@Model.OrderDetail.OrderId">
                        <div class="modal-header bg-danger text-white">
                            <h5 class="modal-title" id="rejectModalLabel">
                                <i class="bi bi-exclamation-triangle"></i> Từ chối đơn hàng #@Model.OrderDetail.OrderId
                            </h5>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <div class="alert alert-warning">
                                <strong>Cảnh báo:</strong> Đơn hàng sẽ bị hủy sau khi từ chối!
                            </div>
                            <p><strong>Người mua:</strong> @Model.OrderDetail.BuyerName</p>
                            <p><strong>Sản phẩm:</strong> @Model.OrderDetail.ItemName</p>
                            <p><strong>Số tiền:</strong> @Model.OrderDetail.TotalAmount.ToString("N0") đ</p>
                            <hr />
                            <div class="mb-3">
                                <label for="reason" class="form-label">Lý do từ chối: <span class="text-danger">*</span></label>
                                <textarea class="form-control" id="reason" name="reason" rows="3"
                                          placeholder="Vui lòng nhập lý do từ chối đơn hàng..." required></textarea>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-x-circle"></i> Xác nhận từ chối
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }
</div>

