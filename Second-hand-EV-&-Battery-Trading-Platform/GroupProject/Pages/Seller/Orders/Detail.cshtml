@page "{id:int}"
@model GroupProject.Pages.Seller.Orders.DetailModel
@{
    ViewData["Title"] = $"Chi tiết đơn hàng #{Model.OrderDetail.OrderId}";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Chi tiết đơn hàng #@Model.OrderDetail.OrderId</h2>
        <a asp-page="/Seller/Orders/Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Quay lại
        </a>
    </div>

    @if (!string.IsNullOrEmpty(Model.StatusMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @Model.StatusMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- Thông tin sản phẩm -->
        <div class="col-lg-8">
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-box-seam"></i> Thông tin sản phẩm</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        @if (!string.IsNullOrWhiteSpace(Model.OrderDetail.ItemImageUrl))
                        {
                            <div class="col-md-4">
                                <img src="@Model.OrderDetail.ItemImageUrl" alt="@Model.OrderDetail.ItemName" class="img-fluid rounded" />
                            </div>
                            <div class="col-md-8">
                                <h4>@Model.OrderDetail.ItemName</h4>
                                <p class="text-muted">@Model.OrderDetail.ItemDescription</p>
                                <hr />
                                <dl class="row">
                                    <dt class="col-sm-4">Loại đơn hàng:</dt>
                                    <dd class="col-sm-8">
                                        @if (Model.OrderDetail.OrderType == "Vehicle")
                                        {
                                            <span class="badge bg-primary text-white">Xe điện</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-info text-white">Pin</span>
                                        }
                                    </dd>

                                    <dt class="col-sm-4">Tổng tiền:</dt>
                                    <dd class="col-sm-8"><strong class="text-success fs-5">@Model.OrderDetail.TotalAmount.ToString("N0") đ</strong></dd>

                                    <dt class="col-sm-4">Phương thức thanh toán:</dt>
                                    <dd class="col-sm-8">@Model.OrderDetail.PaymentMethod</dd>

                                    <dt class="col-sm-4">Ngày đặt hàng:</dt>
                                    <dd class="col-sm-8">@Model.OrderDetail.CreatedDate?.ToString("dd/MM/yyyy HH:mm")</dd>

                                    @if (Model.OrderDetail.CompletedDate.HasValue)
                                    {
                                        <dt class="col-sm-4">Ngày hoàn thành:</dt>
                                        <dd class="col-sm-8">@Model.OrderDetail.CompletedDate?.ToString("dd/MM/yyyy HH:mm")</dd>
                                    }
                                </dl>
                            </div>
                        }
                        else
                        {
                            <div class="col-12">
                                <h4>@Model.OrderDetail.ItemName</h4>
                                <p class="text-muted">@Model.OrderDetail.ItemDescription</p>
                                <hr />
                                <dl class="row">
                                    <dt class="col-sm-3">Loại đơn hàng:</dt>
                                    <dd class="col-sm-9">
                                        @if (Model.OrderDetail.OrderType == "Vehicle")
                                        {
                                            <span class="badge bg-primary text-white">Xe điện</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-info text-white">Pin</span>
                                        }
                                    </dd>

                                    <dt class="col-sm-3">Tổng tiền:</dt>
                                    <dd class="col-sm-9"><strong class="text-success fs-5">@Model.OrderDetail.TotalAmount.ToString("N0") đ</strong></dd>

                                    <dt class="col-sm-3">Phương thức thanh toán:</dt>
                                    <dd class="col-sm-9">@Model.OrderDetail.PaymentMethod</dd>

                                    <dt class="col-sm-3">Ngày đặt hàng:</dt>
                                    <dd class="col-sm-9">@Model.OrderDetail.CreatedDate?.ToString("dd/MM/yyyy HH:mm")</dd>

                                    @if (Model.OrderDetail.CompletedDate.HasValue)
                                    {
                                        <dt class="col-sm-3">Ngày hoàn thành:</dt>
                                        <dd class="col-sm-9">@Model.OrderDetail.CompletedDate?.ToString("dd/MM/yyyy HH:mm")</dd>
                                    }
                                </dl>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Thông tin người mua -->
        <div class="col-lg-4">
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-person-circle"></i> Thông tin người mua</h5>
                </div>
                <div class="card-body">
                    <dl>
                        <dt>Họ tên:</dt>
                        <dd><strong>@Model.OrderDetail.BuyerName</strong></dd>

                        <dt>Email:</dt>
                        <dd>
                            <a href="mailto:@Model.OrderDetail.BuyerEmail">@Model.OrderDetail.BuyerEmail</a>
                        </dd>

                        <dt>Số điện thoại:</dt>
                        <dd>
                            <a href="tel:@Model.OrderDetail.BuyerPhone" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-telephone"></i> @Model.OrderDetail.BuyerPhone
                            </a>
                        </dd>
                    </dl>
                </div>
            </div>

            <!-- Trạng thái đơn hàng -->
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> Trạng thái</h5>
                </div>
                <div class="card-body text-center">
                    @if (Model.OrderDetail.CompletedDate.HasValue)
                    {
                        <span class="badge bg-success text-white fs-6 p-3">
                            <i class="bi bi-check-circle"></i> Đã hoàn thành
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark fs-6 p-3">
                            <i class="bi bi-clock"></i> Chờ xử lý
                        </span>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Thông báo trạng thái -->
    @if (!Model.OrderDetail.CanConfirmOrReject)
    {
        <div class="alert alert-success">
            <i class="bi bi-check-circle"></i> Đơn hàng này đã được xử lý và hoàn thành.
        </div>
    }

    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> <strong>Lưu ý:</strong> Để xác nhận hoặc từ chối đơn hàng, vui lòng quay lại trang danh sách đơn hàng.
    </div>
</div>

