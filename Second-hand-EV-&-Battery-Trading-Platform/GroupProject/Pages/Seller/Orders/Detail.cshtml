@page "{id:int}"
@model GroupProject.Pages.Seller.Orders.DetailModel
@{
    ViewData["Title"] = $"Chi tiết đơn hàng #{Model.OrderDetail.OrderId}";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Chi tiết đơn hàng #@Model.OrderDetail.OrderId</h2>
        <a asp-page="/Seller/Orders/Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Quay lại
        </a>
    </div>

    @if (!string.IsNullOrEmpty(Model.StatusMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @Model.StatusMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- Thông tin sản phẩm -->
        <div class="col-lg-8">
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-box-seam"></i> Thông tin sản phẩm</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        @if (!string.IsNullOrWhiteSpace(Model.OrderDetail.ItemImageUrl))
                        {
                            <div class="col-md-4">
                                <img src="@Model.OrderDetail.ItemImageUrl" alt="@Model.OrderDetail.ItemName" class="img-fluid rounded" />
                            </div>
                            <div class="col-md-8">
                                <h4>@Model.OrderDetail.ItemName</h4>
                                <p class="text-muted">@Model.OrderDetail.ItemDescription</p>
                                <hr />
                                <dl class="row">
                                    <dt class="col-sm-4">Loại đơn hàng:</dt>
                                    <dd class="col-sm-8">
                                        @if (Model.OrderDetail.OrderType == "Vehicle")
                                        {
                                            <span class="badge bg-primary text-white">Xe điện</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-info text-white">Pin</span>
                                        }
                                    </dd>

                                    <dt class="col-sm-4">Tổng tiền:</dt>
                                    <dd class="col-sm-8"><strong class="text-success fs-5">@Model.OrderDetail.TotalAmount.ToString("N0") đ</strong></dd>

                                    <dt class="col-sm-4">Phương thức thanh toán:</dt>
                                    <dd class="col-sm-8">@Model.OrderDetail.PaymentMethod</dd>

                                    <dt class="col-sm-4">Ngày đặt hàng:</dt>
                                    <dd class="col-sm-8">@Model.OrderDetail.CreatedDate?.ToString("dd/MM/yyyy HH:mm")</dd>

                                    @if (Model.OrderDetail.CompletedDate.HasValue)
                                    {
                                        <dt class="col-sm-4">Ngày xác nhận:</dt>
                                        <dd class="col-sm-8">@Model.OrderDetail.CompletedDate.Value.ToString("dd/MM/yyyy HH:mm")</dd>
                                    }

                                    @if (Model.OrderDetail.DeliveryDate.HasValue)
                                    {
                                        <dt class="col-sm-4">Ngày nhận hàng:</dt>
                                        <dd class="col-sm-8">@Model.OrderDetail.DeliveryDate.Value.ToString("dd/MM/yyyy HH:mm")</dd>
                                    }

                                    @if (!string.IsNullOrEmpty(Model.OrderDetail.CancellationReason))
                                    {
                                        <dt class="col-sm-4">Lý do hủy:</dt>
                                        <dd class="col-sm-8"><span class="text-danger">@Model.OrderDetail.CancellationReason</span></dd>
                                    }
                                </dl>
                            </div>
                        }
                        else
                        {
                            <div class="col-12">
                                <h4>@Model.OrderDetail.ItemName</h4>
                                <p class="text-muted">@Model.OrderDetail.ItemDescription</p>
                                <hr />
                                <dl class="row">
                                    <dt class="col-sm-3">Loại đơn hàng:</dt>
                                    <dd class="col-sm-9">
                                        @if (Model.OrderDetail.OrderType == "Vehicle")
                                        {
                                            <span class="badge bg-primary text-white">Xe điện</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-info text-white">Pin</span>
                                        }
                                    </dd>

                                    <dt class="col-sm-3">Tổng tiền:</dt>
                                    <dd class="col-sm-9"><strong class="text-success fs-5">@Model.OrderDetail.TotalAmount.ToString("N0") đ</strong></dd>

                                    <dt class="col-sm-3">Phương thức thanh toán:</dt>
                                    <dd class="col-sm-9">@Model.OrderDetail.PaymentMethod</dd>

                                    <dt class="col-sm-3">Ngày đặt hàng:</dt>
                                    <dd class="col-sm-9">@Model.OrderDetail.CreatedDate?.ToString("dd/MM/yyyy HH:mm")</dd>

                                    @if (Model.OrderDetail.CompletedDate.HasValue)
                                    {
                                        <dt class="col-sm-3">Ngày xác nhận:</dt>
                                        <dd class="col-sm-9">@Model.OrderDetail.CompletedDate.Value.ToString("dd/MM/yyyy HH:mm")</dd>
                                    }

                                    @if (Model.OrderDetail.DeliveryDate.HasValue)
                                    {
                                        <dt class="col-sm-3">Ngày nhận hàng:</dt>
                                        <dd class="col-sm-9">@Model.OrderDetail.DeliveryDate.Value.ToString("dd/MM/yyyy HH:mm")</dd>
                                    }

                                    @if (!string.IsNullOrEmpty(Model.OrderDetail.CancellationReason))
                                    {
                                        <dt class="col-sm-3">Lý do hủy:</dt>
                                        <dd class="col-sm-9"><span class="text-danger">@Model.OrderDetail.CancellationReason</span></dd>
                                    }
                                </dl>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Thông tin người mua -->
        <div class="col-lg-4">
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-person-circle"></i> Thông tin người mua</h5>
                </div>
                <div class="card-body">
                    <dl>
                        <dt>Họ tên:</dt>
                        <dd><strong>@Model.OrderDetail.BuyerName</strong></dd>

                        <dt>Email:</dt>
                        <dd>
                            <a href="mailto:@Model.OrderDetail.BuyerEmail">@Model.OrderDetail.BuyerEmail</a>
                        </dd>

                        <dt>Số điện thoại:</dt>
                        <dd>
                            <a href="tel:@Model.OrderDetail.BuyerPhone" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-telephone"></i> @Model.OrderDetail.BuyerPhone
                            </a>
                        </dd>
                    </dl>
                </div>
            </div>

            <!-- Trạng thái đơn hàng -->
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> Trạng thái</h5>
                </div>
                <div class="card-body text-center">
                    <span class="badge bg-@(Model.OrderDetail.OrderStatus switch
                    {
                        "Pending" => "warning text-dark",
                        "Confirmed" => "info",
                        "Paid" => "success",
                        "Delivering" => "primary",
                        "Delivered" => "primary",
                        "Completed" => "success",
                        "Cancelled" => "danger",
                        _ => "secondary"
                    }) fs-6 p-3">
                        <i class="bi bi-@(Model.OrderDetail.OrderStatus switch
                        {
                            "Pending" => "clock",
                            "Confirmed" => "check-circle",
                            "Paid" => "credit-card",
                            "Delivering" => "truck",
                            "Delivered" => "truck",
                            "Completed" => "check-circle-fill",
                            "Cancelled" => "x-circle",
                            _ => "info-circle"
                        })"></i> @Model.OrderDetail.Status
                    </span>
                    @if (!string.IsNullOrEmpty(Model.OrderDetail.CancellationReason))
                    {
                        <div class="mt-3">
                            <small class="text-muted"><strong>Lý do hủy:</strong></small>
                            <p class="text-danger small mb-0">@Model.OrderDetail.CancellationReason</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Thao tác -->
            @if (Model.OrderDetail.CanConfirmOrReject)
            {
                <div class="card mb-3">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-gear"></i> Thao tác</h5>
                    </div>
                    <div class="card-body">
                        <form method="post" asp-page-handler="Confirm" asp-route-id="@Model.OrderDetail.OrderId" class="mb-2">
                            <button type="submit" class="btn btn-success w-100" onclick="return confirm('Xác nhận đơn hàng #@Model.OrderDetail.OrderId?')">
                                <i class="bi bi-check-circle"></i> Xác nhận đơn hàng
                            </button>
                        </form>
                    </div>
                </div>
            }
            else if (Model.OrderDetail.CanShip)
            {
                <div class="card mb-3">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-truck"></i> Thao tác</h5>
                    </div>
                    <div class="card-body">
                        <form method="post" asp-page-handler="Ship" asp-route-id="@Model.OrderDetail.OrderId">
                            <button type="submit" class="btn btn-primary w-100" onclick="return confirm('Xác nhận giao hàng cho đơn hàng #@Model.OrderDetail.OrderId?')">
                                <i class="bi bi-truck"></i> Giao hàng
                            </button>
                        </form>
                    </div>
                </div>
            }
            else if (Model.OrderDetail.CanCompleteShipment)
            {
                <div class="card mb-3">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-check-circle"></i> Thao tác</h5>
                    </div>
                    <div class="card-body">
                        <form method="post" asp-page-handler="CompleteShipment" asp-route-id="@Model.OrderDetail.OrderId">
                            <button type="submit" class="btn btn-success w-100" onclick="return confirm('Xác nhận đã giao hàng xong cho đơn hàng #@Model.OrderDetail.OrderId? Người mua có 5 phút để xác nhận nhận hàng.')">
                                <i class="bi bi-check-circle"></i> Giao hàng xong
                            </button>
                        </form>
                        <p class="text-muted small mt-2 mb-0">Sau khi bấm, người mua có 5 phút để xác nhận nhận hàng.</p>
                    </div>
                </div>
            }
            
            @if (Model.OrderDetail.CanSellerCancel)
            {
                <div class="card mb-3">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-x-circle"></i> Hủy đơn hàng</h5>
                    </div>
                    <div class="card-body">
                        <button type="button" class="btn btn-danger w-100" onclick="toggleCancelForm()">
                            <i class="bi bi-x-circle"></i> Hủy đơn hàng
                        </button>
                        <div id="cancelFormSection" class="mt-3 p-3 border rounded bg-light" style="display: none;">
                            <form method="post" asp-page-handler="Cancel" asp-route-id="@Model.OrderDetail.OrderId" onsubmit="return validateCancelForm()">
                                <div class="mb-3">
                                    <label for="cancelReason" class="form-label">Lý do hủy đơn hàng <span class="text-danger">*</span></label>
                                    <textarea id="cancelReason" name="reason" class="form-control" rows="3" required placeholder="Nhập lý do hủy đơn hàng..."></textarea>
                                </div>
                                <div class="d-flex gap-2">
                                    <button type="submit" class="btn btn-danger">
                                        <i class="bi bi-x-circle"></i> Xác nhận hủy
                                    </button>
                                    <button type="button" class="btn btn-secondary" onclick="toggleCancelForm()">
                                        Hủy
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<script>
    function toggleCancelForm() {
        var formSection = document.getElementById('cancelFormSection');
        if (formSection.style.display === 'none') {
            formSection.style.display = 'block';
        } else {
            formSection.style.display = 'none';
            document.getElementById('cancelReason').value = '';
        }
    }
    
    function validateCancelForm() {
        var reason = document.getElementById('cancelReason').value.trim();
        if (!reason) {
            alert('Vui lòng nhập lý do hủy đơn hàng.');
            return false;
        }
        return confirm('Bạn có chắc chắn muốn hủy đơn hàng #@Model.OrderDetail.OrderId? Hành động này không thể hoàn tác.');
    }
</script>
